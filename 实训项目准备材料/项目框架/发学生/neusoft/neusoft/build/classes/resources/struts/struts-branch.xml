<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>	
	<package name="branch" namespace="/branch" extends="struts-default">
		<interceptors>
			<!-- 定义AuthenticationInterceptor拦截器 -->
			<interceptor name="auth"
				class="com.neusoft.comon.interceptor.AuthenticationInterceptor" />
		</interceptors>
		<global-results>
			<result name="login">/comm/autherror.jsp</result>
			<result name="error">/comm/error.jsp</result>
			<result name="input">/login.jsp</result>
			<result name="invalid.token">/comm/resubmiterror.jsp</result>
		</global-results>		
	   <action name="insertBranch" method="insertBranch" class="com.neusoft.basis.branch.action.BranchAction" >
			<exception-mapping result="error" exception="java.lang.Exception" /> 
            <result name="success" type="redirectAction">  
                <param name="actionName">getAllBranch</param>  
                <param name="namespace">/branch</param>
                <param name="sessionId">${sessionId}</param>
            </result>  
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="auth" />
		</action>
		<action name="getAllBranch" method="getAllBranch" class="com.neusoft.basis.branch.action.BranchAction" >
			<exception-mapping result="error" exception="java.lang.Exception" />
			<result name="success">/branch/branchMgt.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="auth" />
		</action>
        <action name="getBranch" method="getBranch" class="com.neusoft.basis.branch.action.BranchAction" >
			<exception-mapping result="error" exception="java.lang.Exception" />
			<result name="success">/branch/branchUpdate.jsp</result>
	        <interceptor-ref name="defaultStack" />
	        <interceptor-ref name="auth" />
		</action>
        <action name="updateBranch" method="updateBranch" class="com.neusoft.basis.branch.action.BranchAction" >
			<exception-mapping result="error" exception="java.lang.Exception" />
	        <result name="success" type="redirectAction">  
                <param name="actionName">getAllBranch</param>  
                <param name="namespace">/branch</param>
                <param name="sessionId">${sessionId}</param>
            </result>  
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="auth" />
		</action>
	</package>
</struts>